@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

@* La prise en charge du rappel du serveur sur le onclick nécessite l'intéractivité. *@
<button class="btn btn-primary" @onclick="IncrementCount">Click me FROM COUNTER</button>



<PageAvecParametre @bind-Id="currentCount" @bind-Id:after=AfterIdChanged>

</PageAvecParametre>

<PageAvecParametre IdChanged="IdChangedInChildComponent">

</PageAvecParametre>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        //Ceci est exécuté côté serveur
        currentCount++;
    }

    private void IdChangedInChildComponent(int newValue)
    {
        currentCount = newValue;
    }

    private void AfterIdChanged()
    {
        
    }
}
